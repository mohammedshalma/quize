<?xml version="1.0" encoding="utf-8"?>


<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"



    xmlns:tools="http://schemas.android.com/tools"



    android:layout_width="match_parent"



    android:layout_height="match_parent">







    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"



        xmlns:tools="http://schemas.android.com/tools"



        android:layout_width="match_parent"



        android:layout_height="wrap_content"



        android:orientation="vertical"



        android:paddingLeft="16dp"



        android:paddingTop="16dp"



        android:paddingRight="16dp"



        android:paddingBottom="16dp"



        tools:context=".MainActivity">







        <RelativeLayout



            android:layout_width="match_parent"



            android:layout_height="match_parent"



            android:padding="16dp">







            <TextView



                android:layout_width="wrap_content"



                android:layout_height="wrap_content"



                android:layout_centerHorizontal="true"



                android:layout_marginTop="10dp"



                android:text="Quiz App"



                android:textColor="@android:color/black"



                android:textSize="15sp" />







            <TextView



                android:layout_width="wrap_content"



                android:layout_height="wrap_content"



                android:layout_centerHorizontal="true"



                android:layout_marginTop="55dp"



                android:text="Alabama Crimson Tide!"



                android:textColor="@android:color/black"



                android:textSize="20sp" />







        </RelativeLayout>







        <TextView



            android:layout_width="wrap_content"



            android:layout_height="wrap_content"



            android:layout_marginTop="16dp"



            android:layout_marginBottom="16dp"



            android:text="Answer questions and hit button below to receive your score."



            android:textAllCaps="true" />







        <TextView



            android:id="@+id/question_1"



            android:layout_width="wrap_content"



            android:layout_height="wrap_content"



            android:layout_marginTop="16dp"



            android:layout_marginBottom="16dp"



            android:text="What represents Alabama football?"



            android:textAllCaps="true" />







        <CheckBox



            android:id="@+id/elephant_checkbox"



            android:layout_width="wrap_content"



            android:layout_height="wrap_content"



            android:paddingLeft="24dp"



            android:text="Elephant"



            android:textSize="16sp" />







        <CheckBox



            android:id="@+id/eagle_checkbox"



            android:layout_width="wrap_content"



            android:layout_height="wrap_content"



            android:paddingLeft="24dp"



            android:text="Eagle"



            android:textSize="16sp" />







        <CheckBox



            android:id="@+id/tide_checkbox"



            android:layout_width="wrap_content"



            android:layout_height="wrap_content"



            android:paddingLeft="24dp"



            android:text="Tide"



            android:textSize="16sp" />

        <TextView

            android:id="@+id/question_2"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"

            android:layout_marginBottom="16dp"

            android:text="Who is the greatest Alabama coach?"

            android:textAllCaps="true" />

        <CheckBox

            android:id="@+id/bryant_checkbox"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:paddingLeft="24dp"

            android:text="Bryant"

            android:textSize="16sp" />

        <CheckBox

            android:id="@+id/saban_checkbox"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:paddingLeft="24dp"

            android:text="Saban"

            android:textSize="16sp" />

        <CheckBox

            android:id="@+id/wade_checkbox"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:paddingLeft="24dp"

            android:text="Wade"

            android:textSize="16sp" />

        <TextView

            android:id="@+id/question_3"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"

            android:layout_marginBottom="16dp"

            android:text="What is the name of the band?"

            android:textAllCaps="true" />

        <RadioGroup

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_centerVertical="true" >

            <RadioButton

                android:id="@+id/radio_button1"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Dixie Band" />

            <RadioButton

                android:id="@+id/radio_button2"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Million Dollar Band" />

            <RadioButton

                android:id="@+id/radio_button3"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Big AL" />

        </RadioGroup>

        <TextView

            android:id="@+id/question_4"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"

            android:layout_marginBottom="16dp"

            android:text="What is an Alabama football greating?"

            android:textAllCaps="true" />

        <EditText

            android:id="@+id/answer_field"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"

            android:layout_marginBottom="16dp"

            android:hint="Answer"

            android:inputType="textCapWords" />

        <Button

            android:id="@+id/button_score"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="40dp"

            android:text="Score"

            android:onClick="submitScore"/>

        <TextView

            android:id="@+id/quiz_score"

            android:layout_width="96dp"

            android:layout_height="85dp"

            android:fontFamily="sans-serif-light"

            android:gravity="center"

            android:paddingBottom="24dp"

            android:text="0"

            android:textColor="#000000"

            android:textSize="46sp" />

    </LinearLayout>

</ScrollView>